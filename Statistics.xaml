<Window x:Class="MemoryTiles.Statistics"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryTiles"
        mc:Ignorable="d"
        Title="Statistics" Height="450" Width="800" FontFamily="Showcard Gothic" Background="AliceBlue">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Username:" Margin="10,10,0,0" FontSize="20" />
        <TextBlock x:Name="username" Margin="150,10,0,0" FontSize="20" TextAlignment="Right" />
        <TextBlock Text="Games played:" Margin="10,40,0,0" FontSize="20" />
        <TextBlock x:Name="gamesPlayed" Margin="150,40,0,0" FontSize="20" TextAlignment="Right" Height="55" VerticalAlignment="Top" />
        <TextBlock Text="Games won:" Margin="10,70,0,0" FontSize="20" />
        <TextBlock x:Name="gamesWon" Margin="150,70,0,0" FontSize="20" TextAlignment="Right" />
    </Grid>
</Window>
